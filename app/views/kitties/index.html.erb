<h1 class='mb-5 text-center'>Lost Kitties</h1>

<%= link_to 'Add new kitty found', new_kitty_path, class: 'btn btn-primary btn-lg' %>

<div class="row">
  <% @kitties.each do |kitty| %>
    <div class="col-4 mt-3">
      <div class="card">
        <div class="card-header">
          <%= kitty.species %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= kitty.description %></h5>
          <p class="card-text">Address: <%= kitty.address %></p>
          <p class="card-text">Found <%= time_ago_in_words(kitty.found_at) %></p>
          <%= link_to 'Rescued', kitty_path(kitty), data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
